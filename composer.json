{
    "name": "php-super-server",
    "version": "0.1.0",
    "require": {
        "php": ">7.1.0"
    },
    "scripts": {
        "start:web_api": "php -S 127.0.0.1:5000 examples/web-api/api.php",
        "test": "./vendor/bin/phpunit --colors",
        "lint:fix": "./vendor/bin/php-cs-fixer fix"
    },
    "autoload": {
        "psr-4": {
            "SuperServer\\": "src/SuperServer"
        },
        "files": [
            "src/SuperServer/FP/functions.php",
            "src/SuperServer/Http/request.php",
            "src/SuperServer/Http/response.php",
            "src/SuperServer/Http/session.php",
            "src/SuperServer/Middleware/factory.php",
            "src/SuperServer/app.php",
            "src/SuperServer/routing.php",
            "src/SuperServer/routeMatcher.php"
        ]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^7.5"
    }
}
